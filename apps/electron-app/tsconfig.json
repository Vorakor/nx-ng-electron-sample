{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "../../dist/apps/electron-app",
    "target": "ES2018",
    "module": "CommonJS",
    "lib": ["dom", "ESNext"],
    "moduleResolution": "node",
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "noImplicitAny": false
  }
}
